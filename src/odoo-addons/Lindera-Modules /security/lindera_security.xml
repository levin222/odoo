<?xml version="1.0" ?>
<odoo>
    <record id="module_lindera_category" model="ir.module.category">
        <field name="name">Lindera</field>
    </record>

    <!-- Lindera User Group -->
    <record id="lindera_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_lindera_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <!-- Lindera Manager Group -->
    <record id="lindera_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_lindera_category"/>
        <field name="implied_ids" eval="[(4, ref('lindera_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')),(4, ref('base.user_admin'))]"/>
    </record>
</odoo>